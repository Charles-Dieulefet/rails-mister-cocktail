<h1> <%= "This is #{@cocktail.name} details" %></h1>
<br>
  <% @cocktail.doses.each do |dose| %>
    <ul>
      <li><%= dose.ingredient.name %> <%= "#{dose.description} cl"%></li>
      <%= link_to "Destroy #{dose.ingredient.name}", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?"} %>
    </ul>
  <% end %>

<%= link_to "Edit #{@cocktail.name}'s name", edit_cocktail_path(@cocktail) %>
<br>
<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to "Back to all cocktails", cocktails_path %>
